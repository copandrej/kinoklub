        <style>
        {% set slika = entry.slika.one %}
        .bg-img-parallax {
            background-image: url({{slika.url}});
            background-size: cover;
        }
        </style>

	</head>

	<body>

		<!-- navbar + bg img-->
		<div class="bg-img-parallax">
			<div
				class="navbar navbar-parallax" id="fade-out">

				<!-- logo -->
				<h1>
					<a style="display: flex;" href="{{alias('@web') }}"><img alt="Kino Klub" class="logo" src="{{alias('@web') }}/img/KK-LOGO.png"></a>
				</h1>

				<!-- navbar desktop -->
				<div class="navbar1-parallax">
					<a class="link hover" href="notes">NOTES AND STORIES</a>
					<a class="link hover" href="events">EVENT CALANDAR</a>
					<a class="link hover" href="projects">PROJECTS</a>
					<a class="link hover" href="about">ABOUT</a>
				</div>

			</div>

			<!-- next events info section -->
			<div class="next-events">

				<img src="{{alias('@web') }}/img/next-events.png">
				<h4>

					{% set myEntryQuery = craft.entries()
                        .section('events')
                        .limit(4) %}

					{# Fetch the entries #}
					{% set events = myEntryQuery.all() %}
					{# Display the entries #}
					{% for event in events %}

						<a class="hover" href="{{ event.slug }}">{{ event.title }}<span>{{ event.date|date("d/m")}}</span>
						</a>
					{% endfor %}

				</h4>

				<p>Kino Klub is a project of Aspekt Institute. ©2022</p>

			</div>

			<!-- language change -->
			<lan class="lan">
				<a href="{{alias('@web') }}/sl//">SL
				</a>/<a class="chosen" href="{{alias('@web') }}">
					EN</a>
			</lan>

		</div>

		<!-- navbar mobile -->
		<div id="mobile-meni" class="mobile-meni display-none">

			<a href="notes">NOTES AND STORIES</a>
			<a href="events">EVENT CALANDAR</a>
			<a href="projects">PROJECTS</a>
			<a href="about">ABOUT</a>
			<spn class="mobile-lan">
				<span><a style="display:inline;" href="{{alias('@web') }}/sl//">SL</a>
				</span>/<span>
					<a style="display:inline;" href="{{alias('@web') }}">
					EN</a></span>
			</spn>

		</div>

		<!-- hamburger menu -->
		<div class="knof" id="knof" onclick="anime()">
			<div id="sprememba" class="zg"></div>
			<div id="spremembaa" class="sr"></div>
			<div id="spremembaaa" class="sp"></div>
		</div>

		{# Create an entry query with the 'section' and 'limit' parameters #}
		{% set myEntryQuery = craft.entries()
        .section('notes')
        .limit(5) %}

		{# Fetch the entries #}
		{% set entries = myEntryQuery.all() %}
		{# Display the entries #}

		<!-- main content -->
			<div class="jumbotron landing-main"> {% for entry in entries %}
				{% set slika = entry.slika.one %}

				{% if (loop.index is odd) %}
					<div class="row">

						<div class="col-xl-8">
							<span class="category mobile-display">{{ entry.category }}</span>
							<a href="{{ entry.slug }}">

								<img loading="lazy" class="note-img" src="{{ slika.url }}"></a>
						</div>

						<div class="col-xl-4 title">
							<span class="category desktop-display">{{ entry.category }}</span>
							<h3 class="title">
								{{ entry.title }}
							</h3>
							<a class="notes-link" href="{{ entry.slug }}"><img src="{{alias('@web') }}/img/Vectorvec.svg">READ MORE</a>
						</div>

					</div>
				{% endif %}

				{% if (loop.index is even) %}
					<div class="row reverse">

						<div class="col-xl-4 title">
							<span class="category desktop-display">{{ entry.category }}</span>
							<h3 class="title">
								{{ entry.title }}
							</h3>
							<a class="notes-link" href="{{ entry.slug }}"><img src="{{alias('@web') }}/img/Vectorvec.svg">READ MORE</a>
						</div>

						<div class="col-xl-8">
							<span class="category mobile-display">{{ entry.category }}</span>

							<a href="{{ entry.slug }}"><img loading="lazy" class="note-img" style="float: right" src="{{ slika.url }}"></a>
						</div>

					</div>
				{% endif %}
			{% endfor %}

		</div>

		<!-- footer -->
		<footer
			class="row gen-leg">

			<!---desktop footer-->
			<div class="col-md-2 contact desktop-footer">
				<p>GET IN TOUCH</p>

				<a target="_blank" href="mailto:info@kinoklub.si">info@kinoklub.si</a>
				<a target="_blank" href="tel:(+386) 41 677 889">(+386) 41 677 889</a>
				<a target="_blank" href="tel:(+386) 41 677 889">(+386) 41 677 889</a>
				<a target="_blank" href="https://goo.gl/maps/pvb5CryXmS3NckNF9">Cesta svobode 12a, 4260 Bled</a>

			</div>

			<div class="col-md-1 socials desktop-footer">
				<p>FOLLOW</p>
				<a href="https://www.instagram.com/kinoklub___/"><img src="{{alias('@web') }}/img/Vectorinsta.svg"></a>
				<a href="https://www.facebook.com/kinokluborg/"><img style="margin-left: 17px;" src="{{alias('@web') }}/img/Vectorfb.png"></a>
			</div>

			<div class="col-md-6 more desktop-footer">
				<form>
					<p>WANT MORE FROM KINO KLUB?</p>
					<input type="email" placeholder="Email Address" required>
					<input type="submit" value="Submit">
				</form>
				<span>Kino Klub is a project of Aspekt Institute. ©2022</span>

			</div>


			<!---mobile footer-->
			<div class="more mobile-footer">
				<form>
					<p>WANT TO KNOW MORE</p>
					<input type="email" placeholder="Email Address" required>
					<input type="submit" value="Submit">
				</form>
			</div>

			<div class="socials mobile-footer">
				<p>FOLLOW</p>
				<a href="https://www.instagram.com/kinoklub___/"><img src="{{alias('@web') }}/img/Vectorinsta.svg"></a>
				<a href="https://www.facebook.com/kinokluborg/"><img style="margin-left: 17px;" src="{{alias('@web') }}/img/Vectorfb.png"></a>
			</div>

			<div class="contact mobile-footer">
				<p>GET IN TOUCH</p>
				<a target="_blank" href="mailto:info@kinoklub.si">info@kinoklub.si</a>
				<a target="_blank" href="tel:(+386) 41 677 889">(+386) 41 677 889</a>
				<a target="_blank" href="tel:(+386) 41 677 889">(+386) 41 677 889</a>
				<a target="_blank" href="https://goo.gl/maps/pvb5CryXmS3NckNF9">Cesta svobode 12a, 4260 Bled</a>
				<p class="leg-leg">Kino Klub is a project of Aspekt Institute. ©2022</p>
			</div>

		</footer>

		<script src="{{alias('@web') }}/js/script.js"></script>
		<script src="{{alias('@web') }}/js/fade-out.js"></script>

	</body>
